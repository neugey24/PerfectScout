        <div class="tat-shade"><a id="filter_toggle_position" class="filter-item" href="javascript:toggleFilter('position');">Listed Positions</a><div class="filter-count" id="filter_count_position"></div></div>
        <div class="bit-shade"><a id="filter_toggle_hand" class="filter-item" href="javascript:toggleFilter('hand');">Bat/Throw Hand</a><div class="filter-count" id="filter_count_hand"></div></div>
        <div class="group-heading">Filter by Card:</div>
        <div class="tat-shade"><a id="filter_toggle_ovr" class="filter-item" href="javascript:toggleFilter('ovr');">Overall Rating</a><div class="filter-count" id="filter_count_ovr"></div></div>
