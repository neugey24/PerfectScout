  <div class="container" id="main_display">

    <!-- BEGIN: ********** BATTER DISPLAY *********** -->
    <div id="batter_display" style="background-color: brown;">
    <div class="columns">
        <div class="column is-half" id="batter_filter">

          <!-- BEGIN: ********** Batter PLAYER Filters *********** -->
          <section class="accordions">
            <article class="accordion is-active">

    </article>

            <!-- BEGIN: ********** Batter CARD Filters *********** -->
            <article class="accordion">
            <div class="accordion-header">
                <p>Filter by Card Information:</p>
                <button class="toggle" aria-label="toggle"></button>
            </div>
            <div class="accordion-body">
              <div class="accordion-content">

                  <div class="field">
                    <label for="batter_card_type_program">Card Type/Program:</label>
                    <div class="control">
                      <div class="select is-primary is-small">
                        <select id="batter_card_type_program">
                          <option value="*">(Any Type/Program)</option>
                          {{#each cardTypesProgramsForFilter}}
                            <option value="{{this.abbrev}}">{{this.name}}</option>
                          {{/each}}
                        </select>
                      </div>
                    </div>
                  </div>






            </div>
          </div>
          </article>

          <!-- BEGIN: ********** Batter BATTING RATING Filters *********** -->
          <article class="accordion">
          <div class="accordion-header">
              <p>Filter by BATTING RATINGS:</p>
              <button class="toggle" aria-label="toggle"></button>
          </div>
          <div class="accordion-body">
            <div class="accordion-content">

              <div class="field">
                <label>Batter Filter Groups:</label>
                <div class="control">
                  <div class="select is-primary is-small">
                    <select id="batter_bat_rat_group" onchange="toggleRatingGroup(this, 'bat');">
                      <option value="contact">Contact Ratings</option>
                      <option value="gap">Gap Ratings</option>
                      <option value="power">Power Ratings</option>
                      <option value="eye">Eye Ratings</option>
                      <option value="avoid-k">Avoid K Ratings</option>
                      <option value="runner">Runner Ratings</option>
                      <option value="bunter">Bunter Ratings</option>
                      <!-- <option value="tend">Hitter Tendencies</option> -->
                    </select>
                  </div>
                </div>
              </div>

              <!-- Batter Contact Ratings group -->
              <section id="batter_bat_rat_group_contact">
              <div class="columns" >
                <div class="column is-three-quarters">

