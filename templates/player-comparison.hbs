<div class="compare-heading-wrapper">
{{#if beforeCards}}<a style="float:left;" class="button" onClick="presentPlayerComparison({{playerZeroId}}, false);">&lt;-- Compare higher listed</a>{{/if}}
{{#if afterCards}}<a style="float:right;" class="button" onClick="presentPlayerComparison({{playerTwoId}}, false);">Compare lower listed --&gt;</a>{{/if}}
<div class="compare-heading is-bigger">Player Comparison</div>
</div>

<div class="columns compare-panel">
  {{#each playerData}}
  <div class="column is-one-third compare-card {{comparison_spot}}">
    <div class="player-stripe tier-{{tier_abbrev}}">{{card_overall}} ({{position_abbrev}}) {{first_name}} {{last_name}}</div>
    <ul class="compare-card-details">
      <li>{{card_year}} {{card_type_name}}</li>
      <li>{{city_name}} {{team_name}}</li>
      <li>Bats: {{batting_hand}} &middot; Throws: {{throwing_hand}}</li>
    </ul>
  </div>
  {{/each}}
</div>

<div class="columns rating-panel">
  <div class="column compare-rating right-divider">
    <h3 class="rating-group-heading">Overall Batting</h3>
    <div>
      <h5 class="rating-name-display">Contact</h5>
      <div class="chart-display" id="chart_contact"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Gap Power</h5>
      <div class="chart-display" id="chart_gap"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Power</h5>
      <div class="chart-display" id="chart_power"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Eye</h5>
      <div class="chart-display" id="chart_eye"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Avoid K</h5>
      <div class="chart-display" id="chart_avoid_k"></div>
    </div>
  </div>

  <div class="column compare-rating right-divider">
    <h3 class="rating-group-heading">Batting vs RHP</h3>
    <div>
      <h5 class="rating-name-display">Contact vs R</h5>
      <div class="chart-display" id="chart_contact_vs_r"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Gap Power vs R</h5>
      <div class="chart-display" id="chart_gap_vs_r"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Power vs R</h5>
      <div class="chart-display" id="chart_power_vs_r"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Eye vs R</h5>
      <div class="chart-display" id="chart_eye_vs_r"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Avoid K vs R</h5>
      <div class="chart-display" id="chart_avoid_k_vs_r"></div>
    </div>
  </div>

  <div class="column compare-rating right-divider">
    <h3 class="rating-group-heading">Batting vs LHP</h3>
    <div>
      <h5 class="rating-name-display">Contact vs L</h5>
      <div class="chart-display" id="chart_contact_vs_l"></div>
    </div>
    <div class="chart-justify">
      <h5 class="rating-name-display">Gap Power vs L</h5>
      <div class="chart-display" id="chart_gap_vs_l"></div>
